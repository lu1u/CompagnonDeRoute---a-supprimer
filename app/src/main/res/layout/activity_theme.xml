<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ThemeActivity">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="center"
                tools:layout_editor_absoluteY="366dp">
            <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    app:srcCompat="@drawable/ic_start"
                    android:layout_weight="0.5" android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:id="@+id/imageView1"
                    android:background="@color/colorPrimary1"
                    android:tint="@color/colorAccent1"/>
            <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    app:srcCompat="@drawable/ic_start"
                    android:layout_weight="0.5" android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:id="@+id/imageView2"
                    android:background="@color/colorPrimary2"
                    android:tint="@color/colorAccent2"/>

        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="center">
            <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    app:srcCompat="@drawable/ic_start"
                    android:layout_weight="0.5" android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:id="@+id/imageView3"
                    android:background="@color/colorPrimary3"
                    android:tint="@color/colorAccent3"/>
            <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    app:srcCompat="@drawable/ic_start"
                    android:layout_weight="0.5" android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:id="@+id/imageView4"
                    android:background="@color/colorPrimary4"
                    android:tint="@color/colorAccent4"/>

        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_gravity="center">
            <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    app:srcCompat="@drawable/ic_start"
                    android:layout_weight="0.5" android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:id="@+id/imageView5"
                    android:background="@color/colorPrimary5"
                    android:tint="@color/colorAccent5"/>
            <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    app:srcCompat="@drawable/ic_start"
                    android:layout_weight="0.5" android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:id="@+id/imageView6"
                    android:background="@color/colorPrimary6"
                    android:tint="@color/colorAccent6"/>

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>