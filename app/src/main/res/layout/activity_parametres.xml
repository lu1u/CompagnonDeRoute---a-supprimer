<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ParametresActivity" android:padding="8dp" android:id="@+id/layoutParametres">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fond_group"
            android:orientation="horizontal" android:gravity="center_vertical" android:padding="8dp">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_compagnon"/>

        <TextView
                android:text="Paramètres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView10"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"/>
    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>
    <Switch
            android:text="Forcer le son sur le haut parleur de l'appareil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/switchHautParleur" android:visibility="gone"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>
    <Switch
            android:text="Volume par défaut (média)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/switchVolumeParDefaut"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3"
            android:id="@+id/seekBarVolume" android:padding="8dp"/>

</LinearLayout>